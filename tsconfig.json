{
  "compilerOptions": {
    "target": "es2021",
    "types": ["node"],
    "lib": [
      "es2021",
      "dom"
    ],
    "module": "CommonJS",
    "outDir": "dist",
    "rootDir": "src",
    "strict": true,
    "typeRoots": [
      "./src/types",
      "./node_modules/@types"
    ],
    "esModuleInterop": true
  },
  "include": [
    "src/**/*",
  ], // Adjust based on your folder structure
}